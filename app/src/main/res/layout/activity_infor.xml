<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.branislav.icpc.InforActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Disclaimer"
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="13dp"
        android:typeface="serif"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Fechar"
        android:id="@+id/back_category_textView"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:typeface="serif"
        android:textSize="12dp"
        android:textColor="#304FFE" />

    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Todo conteúdo deste aplicativo, como definições, documentos, e outras informações pertencentes a outros grupos, correspondem a dados atualizados na data de criação deste aplicativo. Atualizações feitas após esta data estão sujeitas a acontecer sem aviso prévio. iSorensen não assume nenhuma responsabilidade por erros, ou pelo uso inadequado das informações constantes neste aplicativo. Em nenhum evento a iSorensen deve ser responsabilizada por qualquer perda, dano, custo direto ou indireto resultante do uso das informações deste aplicativo."
        android:id="@+id/textView5"
        android:layout_below="@+id/back_category_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/black"
        android:typeface="serif"
        android:textSize="13dp"
        android:textAlignment="center" />
</RelativeLayout>
